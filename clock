<style>
  body {
    margin: 0;
    font-family: "Inter", sans-serif;
    background: transparent;
  }

  .clock-container {
    width: 260px;
    height: 140px;
    border-radius: 20px;
    background: #fff5fa;
    box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  /* Optional image */
  .clock-bg {
    position: absolute;
    inset: 0;
    background-image: url("https://i.pinimg.com/736x/02/21/73/02217357a492330e7eeade09de7f7779.jpg");
    background-size: cover;
    background-position: center;
    opacity: 0.15; /* controls softness */
  }

  .clock {
    position: relative;
    font-size: 32px;
